<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="My first report">
    <parameter name="availableBooks" class="java.lang.Integer"/>
    <parameter name="lentBooks" class="java.lang.Integer"/>
    <queryString>
        <![CDATA[]]>
    </queryString>
    <field name="author">
        <fieldDescription>
            <![CDATA[author]]>
        </fieldDescription>
    </field>
    <field name="title">
        <fieldDescription>
            <![CDATA[title]]>
        </fieldDescription>
    </field>
    <background>
        <band splitType="Stretch"/>
    </background>
    <title>
        <band height="42" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="50" height="42"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text>
                    <![CDATA[Books report]]>
                </text>
            </staticText>
        </band>
    </title>
    <columnHeader>
        <band height="100" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="50" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Available:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="0" width="100" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <textFieldExpression class="java.lang.Integer">
                    <![CDATA[$P{availableBooks}]]>
                </textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="15" width="100" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Lent:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="15" width="100" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <textFieldExpression class="java.lang.Integer">
                    <![CDATA[$P{lentBooks}]]>
                </textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="70" width="50" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Author]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="70" width="100" height="20"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <text><![CDATA[Title]]></text>
            </staticText>
        </band>
    </columnHeader>
    <detail>
        <band height="20" splitType="Stretch">
            <textField>
                <reportElement x="0" y="0" width="50" height="15"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{author}]]>
                </textFieldExpression>
            </textField>
            <textField>
                <reportElement x="100" y="0" width="100" height="15"/>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{title}]]>
                </textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>